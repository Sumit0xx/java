/*
PROGRAM -1
IF STATEMENT
PRINT EVEN NUMBER
 */
package ifstatement;

import java.util.*;
public class program1 {
    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        System.out.println("Enter a number");
        int num=sc.nextInt();
        if(num%2==0)
        {
            System.out.println("It is even number");
        }
    }
}
